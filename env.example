# Firebase Configuration - REQUIRED
# Get these values from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.region.firebasedatabase.app
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Development Configuration
NODE_ENV=development
PORT=3000

# CSRF Configuration
CSRF_SECRET=your-secure-csrf-secret-key-change-this-in-production

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379

# API Configuration
# Set to true for production (Firebase Functions), false for local development (Next.js API)
NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=false
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=https://your-region-your-project.cloudfunctions.net

# Local Development (Firebase Emulators)
# For local development, you can use dummy values or your actual Firebase project values
# The app will automatically connect to the Firebase emulators when running in development mode
