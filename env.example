# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Development Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379

# API Configuration
# Set to true for production (Firebase Functions), false for local development (Next.js API)
NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=false
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=https://your-region-your-project.cloudfunctions.net
