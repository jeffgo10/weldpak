# ============================================
# LOCAL DEVELOPMENT (.env)
# ============================================
# Copy this to .env for local development
# These values are for Firebase Emulator

# Firebase Configuration - Local Development (Emulator)
NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=http://localhost:9000?ns=demo-project
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Development Configuration
NODE_ENV=development

# CSRF Configuration
CSRF_SECRET=development-csrf-secret-key-2024

# API Configuration - Use Next.js API for local development
NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=false
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=http://localhost:5001/weldpak/us-central1

# ============================================
# PRODUCTION (.env.production)
# ============================================
# Copy this to .env.production for production deployment
# Get these values from Firebase Console > Project Settings > General > Your apps

# Production Configuration
# NODE_ENV=production

# CSRF Configuration
# CSRF_SECRET=your-production-csrf-secret-key-change-this

# Firebase Configuration (Production)
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
# NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.region.firebasedatabase.app
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
# NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# API Configuration - Use Firebase Functions for production
# NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=true
# NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=https://your-region-your-project.cloudfunctions.net
