rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to processing tasks for authenticated users
    match /processingTasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to public processing results
    match /processedFiles/{fileId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
