{
  "name": "weldpak-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for WeldPak",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "terser": "^5.24.0",
    "clean-css": "^5.3.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11"
  },
  "private": true
}
