{
  "name": "weldpak",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "export": "next build && next export",
    "docker:build": "docker build -t weldpak .",
    "docker:run": "docker run -p 3000:3000 weldpak",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose --profile production up --build",
    "firebase:init": "firebase init",
    "firebase:deploy": "NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=true npm run build && firebase deploy --only hosting",
    "firebase:deploy:functions": "NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=true npm run build && firebase deploy --only functions",
    "firebase:deploy:all": "NEXT_PUBLIC_USE_FIREBASE_FUNCTIONS=true npm run build && firebase deploy",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:db": "firebase emulators:start --only database",
    "dev:emulators": "concurrently \"npm run firebase:emulators\" \"npm run dev\"",
    "dev:db": "concurrently \"npm run firebase:emulators:db\" \"npm run dev\"",
    "dev:local": "./scripts/start-local-dev.sh",
    "test:csrf": "node scripts/test-csrf.js",
    "test:firebase": "node scripts/test-firebase-logging.js",
    "debug:firebase": "node scripts/debug-firebase.js",
    "functions:install": "cd functions && npm install",
    "functions:build": "cd functions && npm run build",
    "functions:deploy": "cd functions && npm run deploy"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "bootstrap": "^5.3.8",
    "bull": "^4.16.5",
    "clean-css": "^5.3.3",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "formik": "^2.4.6",
    "multer": "^2.0.2",
    "next": "15.5.4",
    "node-cron": "^4.2.1",
    "react": "19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "terser": "^5.44.0",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/swc-darwin-x64": "^15.5.4",
    "@tailwindcss/postcss": "^4",
    "@types/bull": "^3.15.9",
    "@types/clean-css": "^4.2.11",
    "@types/cors": "^2.8.19",
    "@types/csrf": "^1.3.2",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
